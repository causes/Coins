<div id="todays_chips">
<h1>Today's Chips</h1>

<table border="1">
  <tr>
    <th>User</th>
    <% @categories.each do |cat| %>
      <th><%=h cat%></th>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <% @categories.each do |cat| %>
      <td>
        <img class="create_chip" src="images/add.png" width="24" height="24"/>
        <span id="user_<%=user.id%>_category_<%=cat.id%>_coins">
          <% if @todays_chips[user] != nil && @todays_chips[user][cat] != nil %>
            <% @todays_chips[user][cat].each do |chip| %>
            <img id="chip_<%=chip.id%>" class="coin_img" src="images/coin.png" width="24" height="24"/>
            <% end %>
          <% end %>
        </span>
      </td>
    <% end %>
  </tr>
<% end %>
</table>


<div id="add_form">
  <form action="/users/auto_create" method="POST">
  <fieldset>
    <label for="name">Add User:</label>
    <input type="text" name="name"/>
    <input type="submit" value="Add"/>
  </fieldset>
  </form>


  <form action="/categories/auto_create" method="POST">
  <fieldset>
    <label for="name">Add Category:</label>
    <input type="text" name="name"/>
    <input type="submit" value="Add"/>
  </fieldset>
  </form>
</div>

</div>

<div id="weeks_chips">
<h1>This Month's Chips</h1>

<table>
<% @months_chips.each do |cat, chips| %>
<tr>
  <th><%=cat%></th>
  <td>
    <% chips.each do %>
    <img src="images/coin.png" width="24" height="24"/>
    <% end %>
  </td>
  <td><%=chips.size%></td>
</tr>
<% end %>
</table>
</div>
